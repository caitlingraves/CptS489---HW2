                    <div>
                      <h1 style="color:rgb(191, 191, 191); font-size: 18px;">COMMENT</h1>
                        <% comments.forEach(comment => { %>
                          <p1 style="background-color:rgb(191, 191, 191); padding:2px; border-radius:6px;"><%= comment.name %></p1>
                          <hr style="padding:0px; margin:0px; margin-top:4px;">
                          <%= comment.comment %>
                          <br>
                        <% }); %>
                  </div>
            </div>
            <div class="col-md-3 order-md-2 box sign">
            
               
                <!--FORM BELOW:-->
    <form method="POST" onsubmit="return validateEmail()">
      <fieldset>
        <legend>Sign this Petition</legend>
        <div id="liveAlertPlaceholder"></div>
        <form method="post" action="/login">
        <div>
          <label for="Name"></label>
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Name*"
          />
        </div><br>
        <div>
          <label for="Email*"></label>
          <input
            type="text"
            id="email"
            name="email"
            placeholder="Email*"
          />
        </div><br>
        <div>
            <label for="Comments"></label>
            <input
              type="text"
              id="comment"
              name="comment"
              placeholder="Comments"
            />
          </div><br>
        
        <input type="submit" value="SIGN PETITION" style="background-color:#2ccb6f; color: white; border-radius: 8px; padding:10px"></button>
        </form>
      </fieldset>
    </form>
